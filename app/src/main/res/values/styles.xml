<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AnswerButtonStyle">
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
        <item name="android:background">@drawable/answer_item_button</item>
        <item name="android:fontFamily">@font/cairo_bold</item>
        <item name="android:paddingStart">@dimen/_34sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

</resources>
